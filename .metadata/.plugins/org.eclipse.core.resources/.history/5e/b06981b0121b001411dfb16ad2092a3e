package day05;

import java.util.Scanner;

/**
 * 验证用户输入
 */
public class Demo02 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int score = -1;
        while (score<0 || score>100) {
            System.out.println("输入分数:");
            score = sc.nextInt();
        }
        System.out.println("输入的分数:"+score);
    }

}
