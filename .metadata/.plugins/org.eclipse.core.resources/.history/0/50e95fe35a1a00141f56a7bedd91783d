package day02;

public class Demo01 {

    public static void main(String[] args) {
//        System.out.println(age);    //编译错误,age没有找到
        int age;    //变量声明
//        System.out.println(age);    //编译错误,age没有初始化
        age = 15;       //初始化,第一次赋值
        System.out.println(age);
        age = 9;        //重新赋值
        System.out.println(age);
        {
            int score = 85; //声明变量,同时初始化
            System.out.println(score);
            System.out.println(age);
        }
        System.out.println(ago);    //编译错,ago没有声明
        System.out.println(score);  //编译错,没有score变量
        int score = 70;         //再次定义score,与代码块中的score不在同一个作用域中
        System.out.println(score);
        
    }

}
