package day03;

public class Demo01 {

    public static void main(String[] args) {
        System.out.println(~6+1);   //-6
        
        System.out.println(~-6+1);  //6
        
        int a = 0x7fffffff;
        int b = 0x7ffffff0;
        System.out.println(a-b);    //15
        
        float fa = a;
        float fb = b;
        System.out.println(fa-fb);  //0.0
        
        double da = a;
        double db = b;
        System.out.println(da-db);
        
    }

}
