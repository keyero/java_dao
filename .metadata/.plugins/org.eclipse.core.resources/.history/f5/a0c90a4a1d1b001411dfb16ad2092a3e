package day05;
/**
 * 数组的语法
 * 1)数组变量的声明
 * 2)数组的创建(内存分配)
 * 3)数组元素的访问(读写)
 */
public class Demo06 {

    public static void main(String[] args) {
//        1)数组变量的声明
        int[] ary;
        String[] players;
//        2)创建数组:3种方式
        ary = new int[3];
        System.out.println(ary[0]); //0
        
        ary = new int[]{4, 5, 5};   //静态初始化,不能用于赋值
        
        int[] ary3 = {5, 6, 7};
        System.out.println(ary3.length);
        players = new String[4];
        
        
    }

}
