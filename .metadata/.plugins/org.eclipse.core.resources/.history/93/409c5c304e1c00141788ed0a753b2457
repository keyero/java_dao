package NetCTOSS;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import utils.DBUtils;

/*
 * entity
 */
public class FooDAO {
    private static final String SAVE = "insert into foo(foo_id, foo_value) values(?,?)";
    
    public void save(Foo foo) throws SQLException {
        Connection con = null;
        try {
            con = DBUtils.getConnection();
            /**
             * 先获取foo_id的最大值
             */
            int id = 0;
            PreparedStatement stmt1 = con.prepareStatement("select max(foo_id) from foo");
            ResultSet rs = stmt1.executeQuery();
            if (rs.next()) {
                id = rs.getInt(1);
            } else id = 1;
            PreparedStatement stmt = con.prepareStatement(SAVE);
            stmt.setInt(1, id+1);
            stmt.setString(2, foo.getValue());
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            if (con != null) {
                con.close();
            }
        }
    }
}
